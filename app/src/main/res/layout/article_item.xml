<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="article"
            type="com.example.newsapp.data.Article" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/articleImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/brazil_opening" />

            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp"
                android:textStyle="bold"
                app:setArticleItemFormatted="@{article.title}"
                app:layout_constraintBottom_toTopOf="@+id/articleDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/articleImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="@string/tools_article_title" />

            <TextView
                android:id="@+id/articleDescription"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textSize="12sp"
                app:setArticleItemFormatted="@{article.description}"
                app:layout_constraintBottom_toTopOf="@+id/articleMoreInfo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/articleImage"
                app:layout_constraintTop_toBottomOf="@+id/articleTitle"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="@string/tools_article_desc" />

            <TextView
                android:id="@+id/articleMoreInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/articleImage"
                app:layout_constraintTop_toBottomOf="@+id/articleDescription"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="Mais Informações" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>